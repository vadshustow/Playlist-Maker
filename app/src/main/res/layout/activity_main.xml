<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_blue"
    android:orientation="vertical"
    android:paddingStart="@dimen/main_padding"
    android:paddingEnd="@dimen/main_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_size" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_medium_regular"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/main_button_text_color"
        android:textSize="@dimen/main_text_size"
        app:cornerRadius="@dimen/main_corn_rad"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/main_button_icon_color" />

    <Button
        android:id="@+id/media_library_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_medium_regular"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0"
        android:text="@string/media_library"
        android:textAllCaps="false"
        android:textColor="@color/main_button_text_color"
        android:textSize="@dimen/main_text_size"
        app:cornerRadius="@dimen/main_corn_rad"
        app:icon="@drawable/ic_library"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/main_button_icon_color" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_medium_regular"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/main_button_text_color"
        android:textSize="@dimen/main_text_size"
        app:cornerRadius="@dimen/main_corn_rad"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/main_button_icon_color" />


</LinearLayout>