<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/phEmptyFavoriteTracksImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:visibility="gone"
        android:src="@drawable/ic_nothing_found" />

    <TextView
        android:id="@+id/phEmptyFavoriteTracksErrorMessage"
        style="@style/MediaLibraryPlaceholderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:visibility="gone"
        tools:text="@string/library_empty_favorite_tracks_placeholder" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoriteTrack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:visibility="gone"
        tools:listitem="@layout/track_view" />
</LinearLayout>