<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/library_background"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/media_library_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/media_library"
        app:titleTextAppearance="@style/TitleText" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabMediaLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/library_tab_background"
        app:tabIndicator="@drawable/media_library_tab_indicator"
        app:tabIndicatorColor="@color/library_tab_indicator"
        app:tabTextAppearance="@style/MediaLibraryTab"
        app:tabTextColor="@color/library_tab_text" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2MediaLibrary"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>