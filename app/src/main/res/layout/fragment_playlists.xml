<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <Button
        style="@style/SearchErrorRefreshButton"
        android:id="@+id/newPlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/library_new_playlist_button"/>

    <ImageView
        android:id="@+id/phEmptyFavoriteTracksImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        tools:src="@drawable/ic_nothing_found" />

    <TextView
        style="@style/MediaLibraryPlaceholderMessage"
        android:id="@+id/phEmptyFavoriteTracksErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        tools:text="@string/library_empty_favorite_tracks_placeholder" />
</LinearLayout>