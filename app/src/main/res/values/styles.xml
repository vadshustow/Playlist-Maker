<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/main_btn_text_size</item>
        <item name="android:insetBottom">@dimen/main_btn_inset</item>
        <item name="android:insetTop">@dimen/main_btn_inset</item>
        <item name="android:insetLeft">@dimen/main_btn_inset</item>
        <item name="android:insetRight">@dimen/main_btn_inset</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/main_corn_rad</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/main_button_icon_color</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="thumbTint">@color/theme_switch_thumb</item>
        <item name="trackTint">@color/theme_switch_track</item>
    </style>

    <style name="SettingsButton">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:drawableTint">@color/settings_icon</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor</item>
    </style>

    <style name="SearchTrackName">
        <item name="android:textColor">@color/search_track_name_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchTrackView">
        <item name="android:textColor">@color/search_track_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/search_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchErrorRefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/search_refresh_background</item>
        <item name="android:textColor">@color/search_refresh_text</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="SearchHistoryText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/search_history_text</item>
    </style>

    <style name="PlayerTitleTrackDescription">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/player_title_description_track</item>
    </style>

    <style name="PlayerTrackDescription">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/player_description_track</item>
    </style>

    <style name="PlayerTimer">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/player_timer</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/player_timer_text_size</item>
    </style>

    <style name="PlayerTrackName">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/player_track_name</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="PlayerArtistName">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/player_artist_name</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediaLibraryTab">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediaLibraryPlaceholderMessage">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/library_error_text</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CreatePlaylistTextInputEditText">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/create_playlist_edit_text</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="CreatePlaylistTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/create_playlist_box_corner_rad</item>
        <item name="boxCornerRadiusBottomStart">@dimen/create_playlist_box_corner_rad</item>
        <item name="boxCornerRadiusTopEnd">@dimen/create_playlist_box_corner_rad</item>
        <item name="boxCornerRadiusTopStart">@dimen/create_playlist_box_corner_rad</item>
        <item name="boxBackgroundColor">@color/create_playlist_edit_text_background</item>
        <item name="boxStrokeColor">@color/text_input_container</item>
        <item name="android:textColorHint">@color/create_playlist_hint</item>
        <item name="hintTextColor">@color/create_playlist_hint</item>
        <item name="cursorColor">@color/search_cursor</item>
    </style>

    <style name="CreatePlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@drawable/create_playlist_button</item>
        <item name="android:insetBottom">@dimen/main_btn_inset</item>
        <item name="android:insetTop">@dimen/main_btn_inset</item>
        <item name="android:insetLeft">@dimen/main_btn_inset</item>
        <item name="android:insetRight">@dimen/main_btn_inset</item>
    </style>

    <style name="PlaylistCardNameAndCount">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/playlist_card_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AddToPlaylistBottomSheet">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">19sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/player_bottom_sheet_add_to_playlist_text</item>
    </style>

</resources>